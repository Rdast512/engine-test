# Linux configuration for clangd

CompileFlags:
  CompilationDatabase: build/linux-clang-debug
  Add:
    - -isystem
    - build/linux-clang-debug/vcpkg_installed/x64-linux/include
    - -Wno-error=default-member-initializer-not-yet-parsed
  Remove:
    - -fmodules-ts
    - -fmodule-mapper=*
    - -fdeps-format=*
    - -fmodule-file=*
    - --precompile
    - -march=native
    - -mtune=native
